#!/usr/bin/env ruby

require 'rubygems'
require 'clactive'
require 'subpod'

CLActive do
  subcmd :install do
    action { SubPod.run(:install) }
  end
  subcmd :update do
    action { SubPod.run(:install, true) }
  end

  option :version, '-v', '--version', 'Version of SubPod'
  action do |opt|
    puts SubPod::VERSION if version?
  end
end
